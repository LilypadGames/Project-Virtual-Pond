	"version": "0.2.0",
	"configurations": [
		{
			"name": "Dev",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "node",
			"runtimeArgs": ["--no-warnings", "--loader", "ts-node/esm"],
			"args": ["${workspaceFolder}/server/src/Run.ts"],
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**", "node_modules/**"]
		},
		{
			"name": "Run",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "node",
			"runtimeArgs": ["--no-warnings", "--loader", "ts-node/esm"],
			"args": ["${workspaceFolder}/server/src/Run.ts"],
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**", "node_modules/**"],
			"env": {
				"NODE_ENV": "production"
			},
			"preLaunchTask": "Build Client"
		}
	]
}
